<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meeting Chatroom</title>
    <%- include('partials/bootstrapInit') %>
    <script>
      const ROOMID = "<%= roomId %>";
      const USERNAME = "CornSalad";
    </script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/js/chatroom.js" defer></script>
    <link rel="stylesheet" href="/css/homepage/home.css" />
    <link rel="stylesheet" href="/css/meeting/chat.css" />
    <link rel="stylesheet" href="/css/chatroom/chatroom.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand">Teams</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <!-- <li class="nav-item">
              <a class="nav-link">New Meeting</a>
            </li> -->
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid main">
      <div class="row">
        <div class="col-12 col-md-3">
          <div class="controlPanel d-flex flex-column align-items-center">
            <button id="joinRoom" class="d-block hvr-sweep-to-right">
              Join Video Call
            </button>
            <button id="leaveRoom" class="d-block hvr-sweep-to-right">
              Leave Chatroom
            </button>
          </div>
        </div>
        <div class="col-12 col-md-9">
          <div class="chatContainer">
            <div id="chatContent"></div>
            <div class="submit d-flex">
              <input
                type="text"
                class="form-control"
                placeholder="Enter message"
                id="chatInput"
              />
              <div class="input-group-append">
                <button
                  class="btn btn-outline-secondary chat-send"
                  type="button"
                  id="sendButton"
                >
                  <i class="fas fa-paper-plane"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
